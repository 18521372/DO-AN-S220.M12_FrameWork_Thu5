    <div class="container mt-3">
        <div class="row">
            <div class="col-4"></div>

            <div class="col-4">
                <h2>Thông tin cá nhân</h2>
                <form action="CapNhatmk" method="post">
                    <div class="mb-3 mt-3">
                        <a class="text-white">Nhập mật khẩu cũ</a>
                        <input type="password" class="form-control" id="id" value="" name="mkcu" >
                    </div>
                    <div class="mb-3">
