@*
    ViewData["Title"] = "Home Page";
*@
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    <html lang="en">
        <head>
            <title>Bootstrap Example</title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
        </head>
    <body>
        <div class="container mt-3">
            <form>
                <div class="row">
                    <div class="row">
                        <h2>Xe của tôi</h2>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
                            thêm xe
                        </button>
                    </div>
                    <div class="row">
                        <div class="col">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>id</th>
                                        <th>Tên xe</th>
                                        <th>Biển sô</th>
                                        <th>Thương hiệu</th>
                                        <th>Chủ sở hữu</th>
                                        <th>Vị trí</th>
                                        <th>Giá cho thuê</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>00</td>
                                        <td>00</td>
                                        <td>Hyen</td>
                                        <td>12-A3 4567</td>
                                        <td>ford</td>
                                        <td>122</td>
                                        <td>Nu</td>
                                        <td>1000</td>
                                        <td>ss</td>
                                        <td><button type="button" class="btn btn-primary" name="sua" data-bs-toggle="modal" data-bs-target="#myModal1">Sửa</button></td>
                                        <td><button type="button" class="btn btn-primary" name="xoa">Xóa</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal fade" id="myModal1">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title" style="color:#000000;">Sửa thông tin xe</h4>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <form>
                            <div class="mb-3 mt-3">
                                <input type="text" class="form-control" id="No" placeholder="No" name="hoten" value=Id>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" id="id" placeholder="ID" name="id">
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" id="tenxe" placeholder="tên xe" name="tenxe">
                            </div>
                            <div class="mb-3">
                                <input type="number" class="form-control" id="bienso" placeholder="biển số" name="bienso">
                            </div>
                            <div class="mb-3">
                                <input type="number" class="form-control" id="thuonghieu" placeholder="Thương Hiệu" name="thuonghieu">
                            </div>
                            <div class="mb-3 mt-3">
                                <input type="text" class="form-control" id="chusohuu" placeholder="Chủ sở hửu" name="hoten">
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" id="vitri" placeholder="vị trí" name="">
                            </div>
                            <div class="mb-3">
                                <input type="number" class="form-control" id="tinhtrang" placeholder="Tình trạng" name="tinhtrang">
                            </div>

                        </form>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">sửa</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Thêm xe mới</h4>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <form>
                            <div class="mb-3 mt-3">
                                <input type="text" class="form-control" id="No" placeholder="No" name="hoten">
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" id="id" placeholder="ID" name="id">
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" id="tenxe" placeholder="tên xe" name="tenxe">
                            </div>
                            <div class="mb-3">
                                <input type="number" class="form-control" id="bienso" placeholder="biển số" name="bienso">
                            </div>
                            <div class="mb-3">
                                <input type="number" class="form-control" id="thuonghieu" placeholder="Thương Hiệu" name="thuonghieu">
                            </div>
                            <div class="mb-3 mt-3">
                                <input type="text" class="form-control" id="chusohuu" placeholder="Chủ sở hửu" name="hoten">
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" id="vitri" placeholder="vị trí" name="">
                            </div>
                            <div class="mb-3">
                                <input type="number" class="form-control" id="tinhtrang" placeholder="Tình trạng" name="tinhtrang">
                            </div>

                        </form>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">thêm xe</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>
}