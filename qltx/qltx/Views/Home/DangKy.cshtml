@{
    ViewData["Title"] = "Đăng ký";
}
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
    @section scripts{
        <script>
            $(function () {
                $('#AlertBox').removeClass('hide');
                $('#AlertBox').delay(2000).slideUp(500);
            });

        </script>
    }
    @if (TempData["AlertMessage"] != null)
    {
        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert" style="text-align:center;">
            @TempData["AlertMessage"]
        </div>
    }
<div class="container mt-3">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4" style="color:white;">
            <h2>Đăng ký</h2>

            <form method="post" action="DK">
                <div class="mb-3 mt-3">
                    <input type="text" class="form-control" id="name" placeholder="Họ và tên" name="hoten">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" id="address" placeholder="Địa chỉ" name="diachi">
                </div>
                <div class="mb-3">
                    <input type="number" class="form-control" id="id" placeholder="ID" name="id">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                </div>
                <div class="mb-3">
                    <input type="number" class="form-control" id="phone" placeholder="Số điện thoại" name="sdt">
                </div>
                <div class="form-check mb-3">
                    <input type="radio" class="form-check-input" id="male" name="gender" value="nam" checked>Nam
                    <label class="form-check-label" for="male"></label>
                </div>
                <div class="form-check mb-3">
                    <input type="radio" class="form-check-input" id="female" name="gender" value="nu">Nữ
                    <label class="form-check-label" for="female"></label>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="pwd" placeholder="Mật khẩu" name="matkhau">
                </div>

                <button type="submit" class="btn btn-primary">Đăng ký</button>

            </form>
            <form method="post" action="DangNhap">
                <div class="mb-3">

                    Bạn đã có tài khoản? <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                </div>
            </form>
        </div>

        <div class="col-4"></div>
    </div>
</div>
