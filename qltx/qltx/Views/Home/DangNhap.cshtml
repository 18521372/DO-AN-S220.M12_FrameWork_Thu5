@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-4"></div>

        <div class="col-4">
            <h2>Đăng nhập</h2>
            <form>
                <div class="mb-3">
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" id="pwd" placeholder="Mật khẩu" name="matkhau">
                </div>

                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </form>
        </div>

        <div class="col-4"></div>
    </div>
</div>