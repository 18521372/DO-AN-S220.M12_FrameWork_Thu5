@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>


@section scripts{
    <script>
        $(function () {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });

    </script>
}
@if (TempData["AlertMessage"] != null)
{
    <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert" style="text-align:center;">
        @TempData["AlertMessage"]
    </div>
}

@model nguoidung
@{ 
    <div class="container mt-3">
        <div class="row">
            <div class="col-4"></div>

            <div class="col-4">
                <h2>Thông tin cá nhân</h2>
                <form action="CapNhatUser" method="post">
                    <div class="mb-3 mt-3">
                        <input type="text" class="form-control" id="id" value="@Model.id" name="id" readonly>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="name" value="@Model.ten" name="ten" >
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="address" value="@Model.diachi" name="diachi">
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" id="email" value="@Model.email" name="email" >
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="phone" value="@Model.sodienthoai" name="sodienthoai" >
                    </div>
                    @if (Model.gioitinh == "Nam")
                    {
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" id="male" name="gioitinh" value="@Model.gioitinh" checked />
                            <label class="form-check-label text-white" for="male">Nam</label>
                        </div>
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" id="female" name="gioitinh" >
                            <label class="form-check-label text-white" for="female">Nữ</label>
                        </div>
                    }
                    else
                    {
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" id="male" name="gioitinh" >
                            <label class="form-check-label text-white" for="male">Nam</label>
                        </div>
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" id="female" name="gioitinh" value="@Model.gioitinh" checked/>
                            <label class="form-check-label text-white" for="female">Nữ</label>
                        </div>
                    }
                    <button type="submit" class="btn btn-primary">Lưu</button>

                </form>
            </div>

            <div class="col-4"></div>
        </div>
    </div>
    }