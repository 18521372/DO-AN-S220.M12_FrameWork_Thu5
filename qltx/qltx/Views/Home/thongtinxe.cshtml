@*
    ViewData["Title"] = "Home Page";
*@
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    @if (TempData["AlertMessage"] != null)
    {
        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert" style="text-align:center;">
            @TempData["AlertMessage"]
        </div>
    }
    var i = 1;
    <html lang="en">
    <head>
        <title>Bootstrap Example</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <div class="w3-row-padding">
            @foreach (var item in Model)
            {
                if (i <= (int)TempData["Page"] && i >= ((int)TempData["Page"] - 5))
                {
            <div class="w3-third w3-container w3-margin-bottom" >
                <a href="thuexe?xeid=@item.id">
                    <img src="@("~/Upload/"+item.tenanh)" asp-append-version="true"  alt="Norway" width="330px" height="220px" class="w3-hover-opacity" >
                    <h4 class="card-title">@item.tenxe</h4>
                    <p class="card-text" style="color: white" >Plate: @item.bienso</p>
                    <p class="card-text" style="color: white" >Location: @item.vitri</p>
                    <p class="card-text" style="color: white" >Cost: @item.giathue</p>
                    <p class="card-text" style="color: white" >Date: @item.ngaythue</p>
                </a>



            </div>
                }
                i++;
            }


        </div>
        <!-- Pagination -->
        @if ((int)TempData["Page"] == 6)
        {
            <div class="w3-center w3-padding-32">
                <div class="w3-bar">
                    <a class="w3-bar-item w3-button w3-hover-black">«</a>
                    <a href="Pagethongtinxe?Page=6" class="w3-bar-item w3-black w3-button">1</a>
                    <a href="Pagethongtinxe?Page=12" class="w3-bar-item w3-button w3-hover-black">2</a>
                    <a href="Pagethongtinxe?Page=18" class="w3-bar-item w3-button w3-hover-black">3</a>
                    <a href="Pagethongtinxe?Page=24" class="w3-bar-item w3-button w3-hover-black">4</a>
                    <a href="#" class="w3-bar-item w3-button w3-hover-black">»</a>
                </div>
            </div>
        }
        @if ((int)TempData["Page"] == 12)
        {
            <div class="w3-center w3-padding-32">
